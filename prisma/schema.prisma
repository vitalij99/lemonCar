generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CarList {
  id     String @id @map("_id")
  name   String
  prise  String
  seats  String
  power  String
  engine String
  image  String

  carBrand String
  brand    Brand  @relation(fields: [carBrand], references: [id], onDelete: Cascade)

  @@index([carBrand])
}

model Brand {
  id     String @id @map("_id")
  name   String
  logo   String
  number String

  cars CarList[]
}
