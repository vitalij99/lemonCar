generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model CarList {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        String
  seats        String
  power        String
  engine       String
  image        String[]
  drive        String
  acceleration String
  type         String

  carBrand String @db.ObjectId
  brand    Brand  @relation(fields: [carBrand], references: [id])
}

model Brand {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  logo String

  cars CarList[]
}

model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  login    String
  password String
}
