generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model CarList {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        String
  seats        String
  power        String
  engine       String
  image        String[]
  drive        String
  acceleration String
  type         String

  carBrand String @db.ObjectId
  brand    Brand  @relation(fields: [carBrand], references: [id])

  commit Forma[]
}

model Brand {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  logo String

  cars CarList[]
}

model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  login    String
  password String
}

model Forma {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  phone      String
  comment    String
  totalPrise Int?
  diffInDays Int?
  deposit    Int?
  price      Int?
  dataFirst  DateTime?
  dataLast   DateTime?

  checkRead Boolean @default(false)

  transferId String?   @db.ObjectId
  transfer   Transfer? @relation(fields: [transferId], references: [id])

  carId   String?  @db.ObjectId
  carList CarList? @relation(fields: [carId], references: [id])
}

model Transfer {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  foto        String
  age         String?
  description String?

  forma Forma[]
}
